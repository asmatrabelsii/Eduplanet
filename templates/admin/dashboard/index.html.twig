{% extends 'admin/base.html.twig' %}

{% block title %}
    Tableau de bord
{% endblock %}

{% block body %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col">
                <div class="card mb-3 text-center bg-light.bg-gradient" style="color: #100545">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4"><i class="fa-solid fa-users fa-3x"></i></div>
                            <div class="col-8"><h5 class="card-title">{{ stats.users }} utilisateurs</h5></div>
                        </div>
                    </div> 
                </div>
            </div>
            <div class="col">
                <div class="card mb-3 text-center bg-light.bg-gradient" style="color: #100545">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4"><i class="fa-solid fa-book fa-3x"></i></div>
                            <div class="col-8"><h5 class="card-title">{{ stats.cours }} cours</h5></div>
                        </div>
                    </div> 
                </div>
            </div>
            <div class="col">
                <div class="card mb-3 text-center bg-light.bg-gradient" style="color: #100545">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4"><i class="fa-solid fa-money-check-dollar fa-3x"></i></div>
                            <div class="col-8"><h5 class="card-title">{{ stats.payments }} achats</h5></div>
                        </div>
                    </div> 
                </div>
            </div>
            <div class="col">
                <div class="card mb-3 text-center bg-light.bg-gradient" style="color: #100545">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4"><i class="fa-solid fa-comments fa-3x"></i></div>
                            <div class="col-8"><h5 class="card-title ">{{ stats.comments }} avis</h5></div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="card mb-3 bg-light.bg-gradient">
                    <h4 class="card-title m-3"><i class="fas fa-arrow-up"></i>&nbsp;Les meilleurs cours</h4>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Auteur</th>
                                    <th>Moyenne</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for cours in bestCours %}
                                    <tr>
                                        <td>{{ cours.titre }}</td>
                                        <td><img src="{{ asset('/uploads/avatars')}}/{{ cours.avatar }}" alt="" class="avatar avatar-micro"> &nbsp;&nbsp;{{ cours.nom }} {{ cours.prenom }}</td>
                                        <td>
                                            <span class="badge bg-primary">{{ cours.note |number_format("1", ",", " ") }}</span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-3 bg-light.bg-gradient">
                    <h4 class="card-title m-3"><i class="fas fa-arrow-down"></i>&nbsp;Les pires cours</h4>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Auteur</th>
                                    <th>Moyenne</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for cours in worstCours %}
                                    <tr>
                                        <td>{{ cours.titre }}</td>
                                        <td><img src="{{ asset('/uploads/avatars')}}/{{ cours.avatar }}" alt="" class="avatar avatar-micro"> &nbsp;&nbsp;{{ cours.nom }} {{ cours.prenom }}</td>
                                        <td>
                                            <span class="badge bg-primary">{{ cours.note |number_format("1", ",", " ") }}</span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
