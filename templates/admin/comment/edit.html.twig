{% extends 'admin/base.html.twig' %}

{% block title %}
    Modification du commentaire de {{ comment.auteur.fullName }}
{% endblock %}

{% block body %}
    <div class="container">
		<h1 class="my-3 mx-4">Modification du commentaire de {{ comment.auteur.fullName }}</h1>
        <div class="container w-75" style="height:50vh;">
            <div class="alert alert-info">
                <strong>Cours lié: </strong>{{ comment.cours.titre }}<br>
                <strong>Auteur: </strong>{{ comment.auteur.fullName }}<br>
                <strong>Date de création: </strong>{{ comment.createdAt|date('d/m/Y à H:i') }}<br>
                <strong>Note donnée: </strong>{{ comment.rating }}
            </div>

            {{ form_start(form) }}

            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}