{% extends 'base.html.twig' %}

{% block title %}Examen
{% endblock %}

{% block body %}
	<div class="container mt-5" style="width:70%">
		<h1 class="my-3">Examen de
			{{ examen.cours.titre }}</h1>
		<div class="row alert alert-info">
			<div class="col">Barème : {{ examen.bareme }}%</div>
			<div class="d-flex col justify-content-end">Prix: {{ examen.prix|number_format(3,',',' ') }} DT</div>
		</div>
		<div class="m-5">
			{% for question in examen.questions %}
				<h6 class="border p-2">{{ question.enonce }}</h6>
				<ul>
                	<li><strong>Réponse vraie: </strong>{{ question.choix1 }}</li>
					<li>{{ question.choix2 }}</li>
					<li>{{ question.choix3 }}</li>
					<li>{{ question.choix4 }}</li>
				</ul>
			{% endfor %}
		</div>
	</div>
{% endblock %}
