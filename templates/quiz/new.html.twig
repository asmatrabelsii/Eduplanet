{% extends 'base.html.twig' %}

{% block title %}Ajouter un quiz
{% endblock %}

{% form_theme form 'quiz/_collection.html.twig' %}

{% block body %}
	<div class="container">
		<h1 class="my-3">Ajouter un quiz</h1>
		<div class="container w-75">
			{{ form_start(form) }}

			{{ form_widget(form) }}

			<button type="submit" class="btn btn-primary">Ajouter</button>

			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}

{% block javascripts %}
	<script src="/js/quiz.js"></script>
{% endblock %}
